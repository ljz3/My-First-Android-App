<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:paddingTop="10dp"
        android:src="@drawable/tacologo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:src="@drawable/taco" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/desc"
        android:layout_marginTop="10dp"
        android:src="@drawable/location" />

    <ImageView
        android:id="@+id/web"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginLeft="5dp"
        android:src="@drawable/website" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/web"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/phone" />


    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="20dp"
        android:text="Fast-food chain serving Mexican-inspired fare such as tacos, quesadillas and nachos."
        android:textColor="@android:color/black"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/location"
        android:fontFamily="sans-serif-light"
        android:paddingTop="10dp"
        android:text="475 Hazeldean Rd, Kanata, ON K2L 1V1"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/web"
        android:fontFamily="sans-serif-light"
        android:paddingTop="20dp"
        android:text="tacobell.ca"
        android:textColor="@android:color/black"
        android:textSize="16sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/web"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/phone"
        android:fontFamily="sans-serif-light"
        android:paddingTop="20dp"
        android:text="(613) 836-4011"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</RelativeLayout>
